{
	"name": "penguin-adinfo",
	"private": "false",
	"version": "1.1.4",
	"description": "O Ad Info Penguin é um recurso que tem como objetivo o controle e padronização do uso de parametrização e nomenclatura de mídia digital. ",
	"main": "index.js",
	"scripts": {
		"start": "node index.js",
		"test": "npm run unit-test",
		"unit-test": "mocha --require ts-node/register --timeout 2000 --exit ts 'test/**/*.spec.ts'",
		"lint": "eslint ./src --ext .ts",
		"lint-prettier": "npx prettier --check .",
		"lint-fix": "eslint ./src --ext .ts --fix",
		"compile": "tsc",
		"auto-compile": "tsc -w",
		"format": "npx prettier --write .",
		"build": "npm run compile && npm run lint && npm run format",
		"coverage": "nyc --reporter=lcov --reporter=cobertura npm run unit-test",
		"docs": "npx typedoc --out docs"
	},
	"nyc": {
		"exclude": [
			"src/ts/models/cloud/*"
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/DP6/penguin-adinfo"
	},
	"author": "DP6",
	"contributors": [
		{
			"name": "Lucas Tonetto Firmo",
			"email": "lucasfirmo@hotmail.com"
		}
	],
	"keywords": [
		"dp6",
		"adinfo"
	],
	"homepage": "https://github.com/DP6/penguin-adinfo#readme",
	"release": {
		"branch": "master",
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/npm",
				{
					"npmPublish": false
				}
			],
			[
				"@semantic-release/github"
			]
		]
	},
	"license": "ISC",
	"dependencies": {
		"@google-cloud/firestore": "^4.15.0",
		"@google-cloud/logging-bunyan": "^3.0.1",
		"@google-cloud/storage": "^5.14.0",
		"@types/bunyan": "^1.8.6",
		"body-parser": "^1.19.0",
		"bunyan": "^1.8.15",
		"convert-csv-to-json": "1.3.0",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.2.0",
		"express-validator": "^6.11.1",
		"json-2-csv": "^3.14.4",
		"multer": "^1.4.2",
		"remark": "^13.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.2.19",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-fileupload": "^1.1.6",
		"@types/mocha": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"chai": "^4.2.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-tsdoc": "^0.2.14",
		"mocha": "^9.0.0",
		"nodemon": "^2.0.7",
		"nyc": "^15.1.0",
		"prettier": "^2.1.2",
		"supertest": "^6.1.6",
		"ts-node": "^10.0.0",
		"typedoc": "^0.20.37",
		"typescript": "^4.2.4"
	}
}
